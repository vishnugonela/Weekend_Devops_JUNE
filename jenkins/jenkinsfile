pipeline {
    agent any
    stages{
        stage('listing_scripts'){
            steps {
                sh''' 
                     echo " listing scripts from github repo"
               ls ${WORKSPACE}/
                  '''
            }
        }
         stage('executing_scripts'){
            steps {
                sh '''
                      echo " Build is completed on stage2 "
               bash ${WORKSPACE}/linux/if_Condition_statments.sh 
                   '''
            }
        }
    }
}
